<script>
    
    fetch('https://ipinfo.io/json?token=86332b1a283755') // Replace YOUR_TOKEN_HERE with your actual token from ipinfo.io
        .then(response => response.json())
        .then(data => {
            document.getElementById('ipAddress').value = data.ip;
            document.getElementById('country').value = data.country;
        })
        .catch(error => {
            console.error('Error fetching IP address and country:', error);
        });
    // Parse URL query parameters
    const urlParams = new URLSearchParams(window.location.search);
    const success = urlParams.get('success');
    const message = decodeURIComponent(urlParams.get('message'));

    // Display alert message based on query parameters
    if (success === 'true') {
        alert(message);
    } else if (success === 'false') {
        alert('Error: ' + message);
    }
</script>
